
# VCTT-AGI Engine (MIN) - Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env files to the repository!

# ========================================
# DATABASE CONFIGURATION
# ========================================
# For Render Production: Get from Render Dashboard > PostgreSQL > Internal Database URL
# For Abacus.AI Development: Get from Abacus.AI database service
DATABASE_URL=postgresql://username:password@host:5432/database_name

# ========================================
# INSTANCE IDENTITY
# ========================================
# Platform: "render" (production) or "abacus-ai" (development)
DEPLOYMENT_PLATFORM=render

# Role: "production" or "development"
DEPLOYMENT_ROLE=production

# Unique instance name (helps identify which backend in logs)
INSTANCE_NAME=vctt-agi-render-production

# Frontend URL that should connect to this backend
CONNECTED_FRONTEND=https://vctt-agi-ui.vercel.app

# ========================================
# LLM API CONFIGURATION
# ========================================
# OpenRouter API Key (for LLM calls)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ========================================
# OPTIONAL: ADVANCED CONFIGURATION
# ========================================
# Node environment
NODE_ENV=production

# Port (default: 10000 for Render, 3000 for local dev)
PORT=10000

# CORS origins (comma-separated)
CORS_ORIGINS=https://vctt-agi-ui.vercel.app,http://localhost:3000
